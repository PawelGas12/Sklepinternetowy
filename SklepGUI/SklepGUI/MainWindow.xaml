<Window x:Class="SklepGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sklep (Asortyment i Personel)" Height="600" Width="950" WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="ASORTYMENT" Grid.Column="0" BorderBrush="Gray" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <WrapPanel Grid.Row="0" Margin="0,0,0,10">
                        <Button Content="Dodaj" Width="70" Margin="0,0,5,5" Click="btnDodajProdukt_Click"/>

                        <Button Content="Edytuj" Width="70" Margin="0,0,5,5" Background="#FFFFE0" Click="btnEdytujProdukt_Click"/>

                        <Button Content="Usuń" Width="70" Margin="0,0,5,5" Background="#FFCCCC" Click="btnUsunProdukt_Click"/>
                        <Button Content="Klonuj" Width="70" Margin="0,0,5,5" Background="#E0E0FF" Click="btnKlonujProdukt_Click"/>
                        <Button Content="Sortuj ceną" Width="90" Margin="0,0,5,5" Click="btnSortujProdukty_Click"/>
                    </WrapPanel>

                    <ListBox x:Name="lstProdukty" Grid.Row="1" Background="#FAFAFA" BorderBrush="LightGray"/>
                </Grid>
            </GroupBox>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <GroupBox Header="KIEROWNIK" Grid.Row="0" Margin="0,0,0,15" BorderBrush="Gray" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtKierownik" Grid.Column="0" IsReadOnly="True" Background="#EEEEEE" FontWeight="Bold" Margin="0,0,10,0"/>
                        <Button Content="Zmień" Grid.Column="1" Width="70" Click="btnZmienKierownika_Click"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="ZESPÓŁ PRACOWNICZY" Grid.Row="1" BorderBrush="Gray" Padding="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <WrapPanel Grid.Row="0" Margin="0,0,0,10">
                            <Button Content="Dodaj" Width="70" Margin="0,0,5,5" Click="btnDodajPracownika_Click"/>

                            <Button Content="Usuń" Width="70" Margin="0,0,5,5" Background="#FFCCCC" Click="btnUsunPracownika_Click"/>

                            <Button Content="Sortuj A-Z" Width="80" Margin="0,0,5,5" Click="btnSortuj_Click"/>

                            <Button Content="Sortuj zarobki" Width="80" Margin="0,0,5,5" Background="#E0FFE0" Click="btnSortujWyplata_Click"/>
                        </WrapPanel>

                        <ListBox x:Name="lstPracownicy" Grid.Row="1" Background="#FAFAFA" BorderBrush="LightGray"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>

        <Button x:Name="btnZapisz" Grid.Row="1" Content="ZAPISZ WSZYSTKO (XML)" Height="40" Margin="0,15,0,0" 
                Background="LightGreen" FontWeight="Bold" FontSize="14" Click="btnZapisz_Click"/>
    </Grid>
</Window>